<%= form_for @todo do |f| %>
  <%= f.label :item %>
  <%= f.text_field :item %>
  <br />
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br />
  <%= f.label :priority %>
  <%= f.select :priority, options_for_priority, :prompt => 'Select one' %>
  <br />
  <%= f.submit %>
<% end %>